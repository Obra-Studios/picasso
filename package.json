{
    "name": "Picasso",
    "version": "1.0.0",
    "description": "Your Figma Plugin",
    "main": "code.js",
    "scripts": {
        "build": "esbuild code.ts --bundle --outfile=code.js --format=iife --target=es2015",
        "watch": "esbuild code.ts --bundle --outfile=code.js --format=iife --target=es2015 --watch",
        "build:tsc": "tsc -p tsconfig.json",
        "watch:tsc": "tsc -p tsconfig.json --watch",
        "lint": "eslint --ext .ts,.tsx --ignore-pattern node_modules .",
        "lint:fix": "eslint --ext .ts,.tsx --ignore-pattern node_modules --fix .",
        "benchmark": "bun run benchmark-execution.ts"
    },
    "author": "",
    "license": "",
    "devDependencies": {
        "@figma/eslint-plugin-figma-plugins": "*",
        "@figma/plugin-typings": "*",
        "@types/bun": "^1.3.2",
        "@typescript-eslint/eslint-plugin": "^6.12.0",
        "@typescript-eslint/parser": "^6.12.0",
        "esbuild": "^0.25.12",
        "eslint": "^8.54.0",
        "typescript": "^5.3.2",
        "vite": "^7.2.2",
        "vite-plugin-singlefile": "^2.3.0"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:@figma/figma-plugins/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "project": "./tsconfig.json"
        },
        "root": true,
        "rules": {
            "@typescript-eslint/no-unused-vars": [
                "error",
                {
                    "argsIgnorePattern": "^_",
                    "varsIgnorePattern": "^_",
                    "caughtErrorsIgnorePattern": "^_"
                }
            ]
        }
    }
}